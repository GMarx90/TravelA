<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

    <persistence-unit name="my-persistence" transaction-type="RESOURCE_LOCAL">
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <!-- warning: JAR files -->
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:5432/postgres?currentSchema=nowy_schemat"/>
            <property name="javax.persistence.jdbc.user" value="user"/>
            <property name="javax.persistence.jdbc.password" value="user"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL95Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
<!--            robi create i update DB-->
            <property name="hibernate.show_sql" value="true"/>
<!--            wyświetla zapytania do db-->
            <property name="hibernate.format_sql" value="true"/>
<!--            układa w czytelny sposób zapytania-->
<!--            <property name="javax.persistence.schema-generation.database.action" value="create"/>-->
            <!--            generuje autimatycznie tabelę-->

        </properties>
    </persistence-unit>
</persistence>